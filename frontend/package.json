{
  "name": "drop-frontend",
  "version": "0.1.0",
  "description": "Frontend for the drop file sharing service",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild --tsconfig=tsconfig.node.json build.ts | node --input-type=module",
    "build:watch": "esbuild --tsconfig=tsconfig.node.json watch.ts | node --input-type=module",
    "serve": "python3 -m http.server --directory ./dist 8080",
    "dev": "concurrently 'npm:build:watch' 'npm:serve'",
    "test": "TS_NODE_PROJECT='tsconfig.node.json' mocha --verbose --extension ts --require ts-node/register src/**/*.test.ts",
    "coverage": "nyc --reporter lcov --extension .ts npm run test"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/ejs": "^3.0.6",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.2",
    "chai": "^4.3.4",
    "chokidar": "^3.5.1",
    "concurrently": "^6.2.0",
    "cssnano": "^5.0.5",
    "ejs": "^3.1.6",
    "esbuild": "^0.12.5",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "postcss": "^8.3.0",
    "postcss-import": "^14.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
